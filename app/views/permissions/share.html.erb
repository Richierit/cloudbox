<%= form_for :permission do |f| %>
  <div class="field">
    Recipient's email: 
    <%= f.text_field :sharedto, autofocus: true , class:"form-control" %><br />
  </div>
  <div class="field">
  	<%= f.hidden_field :file_id, class:"form-control", 	value: params[:file_id] %> 
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>